{
  "compilerOptions": {
    "target": "ES2023",                            
    "module": "commonjs",                                
    "rootDir": "./packages/backend-services/src",
    "outDir": "./packages/backend-services/dist",
    "strict": true,
    "esModuleInterop": true,                                      
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
