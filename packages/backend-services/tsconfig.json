{ 
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist",  
    "rootDir": "./src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express"],

    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
  },
  "include": [ 
    "src/**/*",

],
  "exclude": [ "dist", "node_modules",  ]
}
