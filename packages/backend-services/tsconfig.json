{ 
  // "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",  
    "rootDir": "./src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express"],

    "typeRoots": [
      "./src/types",
    ],
  },
  "include": [ 
    "src/**/*",

],
  "exclude": [ "dist", "node_modules",  ]
}
